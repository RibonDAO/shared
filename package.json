{
  "name": "@ribon.io/shared",
  "version": "1.0.82",
  "description": "Shared library for Ribon",
  "author": "ribon",
  "license": "Apache-2.0",
  "repository": "RibonDAO/shared",
  "main": "dist/cjs/index.js",
  "module": "dist/index.js",
  "typings": "dist/index.d.ts",
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "scripts": {
    "build": "yarn clean && rollup -c --bundleConfigAsCjs && yarn post:build",
    "post:build": "node ./scripts/frankBuild.js",
    "clean": "rimraf dist",
    "dev": " yarn watch & yarn start",
    "start": "rollup -c --bundleConfigAsCjs -w",
    "watch": "onchange 'dist/**/*.js' -- cp -a ./dist/. $(grep RIBON_NATIVE_PATH .env | cut -d '=' -f2)/node_modules/@ribon.io/shared/",
    "test": "jest",
    "lint": "eslint src/**/*.ts src/**/*.tsx && prettier --check src/**/*.ts src/**/*.tsx"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ]
  },
  "peerDependencies": {
    "react": ">= 17.0.2",
    "react-dom": ">= 17.0.2"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^24.0.0",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-replace": "^5.0.2",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^12.1.5",
    "@testing-library/react-hooks": "^3.4.1",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^26.0.7",
    "@types/react": "^16.3.13",
    "@types/react-dom": "^16.0.5",
    "@types/styled-components": "^5.1.25",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.0",
    "axios-mock-adapter": "^1.21.2",
    "babel-core": "^6.26.3",
    "babel-runtime": "^6.26.0",
    "eslint": "^8.23.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.0.8",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "jest": "^26.1.0",
    "onchange": "^7.1.0",
    "prettier": "^2.8.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-test-renderer": "^16.13.1",
    "rollup": "^3.7.5",
    "rollup-plugin-generate-package-json": "^3.2.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-sass": "^1.2.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.34.1",
    "rollup-plugin-uglify": "^6.0.4",
    "ts-jest": "^26.1.3",
    "ttypescript": "^1.5.15",
    "typescript": "^3.8.3",
    "typescript-transform-paths": "^3.4.4"
  },
  "keywords": [
    "ribon",
    "web3",
    "charity",
    "dapp",
    "shared"
  ],
  "dependencies": {
    "@apollo/client": "^3.6.9",
    "@types/base-64": "^1.0.0",
    "axios": "^0.27.2",
    "camelcase-keys": "^7.0.2",
    "cross-fetch": "^3.1.5",
    "graphql": "^16.6.0",
    "prop-types": "^15.7.2",
    "react-query": "^3.34.8",
    "snakecase-keys": "^5.4.4",
    "styled-components": "^5.3.6"
  }
}
